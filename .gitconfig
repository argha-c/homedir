[user]
    name = Argha
    email = ######

[core]
    excludesfile = ~/.gitignore
    editor = vim
[branch]
	autosetuprebase = always
[color]
    ui = auto

[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    aa = add --all
    gpr = pull --rebase --autostash
    # custom log that is a copy of Gary Bernhardt's
    l  = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all

    ll  = log --oneline --decorate --graph
    lla = !git ll --all
    
    ## Not safe anymore
    yolo = commit -m "DEAL WITH IT." && git push origin +master 
